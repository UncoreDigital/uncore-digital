<!-- Pop-up event-->
<!-- ðŸ”¹ Popup Wrapper -->
<div id="eventPopup" class="popup-overlay">
  <div class="popup-content">
    <span class="popup-close" onclick="closePopup()">&times;</span>

    <!-- Image Wrapper -->
    <div class="image-wrapper">
      <img src="/assets/images/event-banner.png" alt="Gitex Event" class="popup-image">

      <!-- Transparent Clickable Button -->
      <a href="https://calendly.com/uncoredigital/gitex-2025-coffee-chat-with-uncore-digital" 
         target="_blank" 
         class="image-btn"
         aria-label="Schedule Coffee Chat"></a>
    </div>
  </div>
</div>

<style>
/* --- Popup Styling --- */
.popup-overlay {
  position: fixed;
  top: 0; left: 0;
  width: 100vw; height: 100vh;
  background: rgba(0, 0, 0, 0.7);
  display: flex; justify-content: center; align-items: center;
  z-index: 9999;
}

.popup-content {
  position: relative;
  background: white;
  border-radius: 12px;
  max-width: 90%;
  width: 1000px;
  overflow: hidden;
}

.popup-close {
  position: absolute;
  top: 10px; right: 15px;
  font-size: 24px;
  color: #fff;
  cursor: pointer;
  z-index: 1000;
}

.image-wrapper {
  position: relative;
  width: 100%;
}

.popup-image {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}

/* --- Transparent Clickable Area --- */
.image-btn {
  position: absolute;
  left: 50%;
  top: 59%;         /* Adjust this value to match button position */
  transform: translate(-50%, -50%);
  width: 28%;       /* Adjust width to match button width */
  height: 6%;      /* Adjust height to match button height */
  cursor: pointer;
  background: rgba(255, 255, 255, 0);
  transition: all 0.25s ease;
  border-radius: 8px;
}


/* --- Hover Effect --- */
.image-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  box-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
  transform: translate(-50%, -50%) scale(1.03);
}

/* --- Active (Click) Effect --- */
.image-btn:active {
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.6);
  transform: translate(-50%, -50%) scale(0.97);
}

/* --- Responsive Adjustments --- */
@media (max-width: 768px) {
  .image-btn {
    top: 59%;
    width: 28%;
    height: 6%;
  }
}
</style>

<script>
// Show popup on page load
window.addEventListener("load", () => {
  const popup = document.getElementById("eventPopup");
  popup.style.display = "flex";
});

// Close popup
window.addEventListener("load", () => {
  const popup = document.getElementById("eventPopup");
  popup.style.display = "flex";
});

// Attach to window so onclick works
window.closePopup = function() {
  document.getElementById("eventPopup").style.display = "none";
};
</script>
