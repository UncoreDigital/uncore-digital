<!-- Active toggle button style -->
<style>
  .tz-pricing2__toggle button.active {
    background-color: #000;
    color: #fff;
  }
</style>

<!-- Working Script with Type Safety -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const btnMonthly = document.querySelector(".tz-pricing2__1month");
    const btnCustom = document.querySelector(".tz-pricing2__3month");
    const customCard = document.querySelector(".tz-custom-card");
    const priceCards = document.querySelectorAll(".tz-price-card");
    const prices = document.querySelectorAll(".tz-price");

    if (
      !(btnMonthly instanceof HTMLElement) ||
      !(btnCustom instanceof HTMLElement) ||
      !(customCard instanceof HTMLElement)
    ) {
      return;
    }

    // Default View
    btnMonthly.classList.add("active");
    btnCustom.classList.remove("active");
    customCard.style.display = "none";
    priceCards.forEach((card) => {
      if (card instanceof HTMLElement) card.style.display = "block";
    });

    btnMonthly.addEventListener("click", () => {
      btnMonthly.classList.add("active");
      btnCustom.classList.remove("active");
      customCard.style.display = "none";

      priceCards.forEach((card) => {
        if (card instanceof HTMLElement) card.style.display = "block";
      });

      prices.forEach((price) => {
        if (price instanceof HTMLElement) {
          const monthly = price.getAttribute("data-1monthly");
          if (monthly) price.textContent = monthly;
        }
      });
    });

    btnCustom.addEventListener("click", () => {
      btnCustom.classList.add("active");
      btnMonthly.classList.remove("active");
      customCard.style.display = "block";

      priceCards.forEach((card) => {
        if (card instanceof HTMLElement) card.style.display = "none";
      });
    });
  });
</script>
